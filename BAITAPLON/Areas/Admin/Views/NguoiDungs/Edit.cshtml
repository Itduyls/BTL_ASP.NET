@model BAITAPLON.Areas.NguoiDung

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="tintuc-h2-ct">Chỉnh sửa</h2>

@using (Html.BeginForm("Edit", "NguoiDungs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4 class="tintuc-h4">Người dùng</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger1" })
    @Html.HiddenFor(model => model.Id_NguoiDung)

    <div class="form-group">
        @Html.LabelFor(model => model.Ten_NguoiDung, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Ten_NguoiDung, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ten_NguoiDung, "", new { @class = "text-danger1" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger1" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Hình ảnh đại diện</label>
        <div class="col-md-10">
            <img onclick="selectImg()" id="output" class="img-rounded" alt="Ảnh bìa" width="180"
                 src="~/Areas/Admin/assets/img/@Model.Avatar" />
            <p><label for="ufile" style="cursor:pointer;">Chọn file ảnh</label></p>
            <input name="Avatar" id="ufile" type="file" style="display:none;" onchange="loadFile(event)">
            @Html.HiddenFor(model => model.Avatar)
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger1" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Passwork, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Passwork, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Passwork, "", new { @class = "text-danger1" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu" class="tintuc-create-1" />
        </div>
    </div>
</div>
}

<div>
    <h4> <a href="@Url.Action("Index","NguoiDungs")"><img src="https://img.icons8.com/external-dreamstale-lineal-dreamstale/32/000000/external-back-left-arrows-dreamstale-lineal-dreamstale.png" height="14px" width="15px" /> Quay lại</a></h4>

</div>
<script>
    var loadFile = function (event) {
        var image = document.getElementById('output');
        image.src = URL.createObjectURL(event.target.files[0]);
    };
    function selectImg() {
        document.getElementById("ufile").click();
    }
</script>